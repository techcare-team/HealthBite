<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/opor_ayam" />
        </FrameLayout>

        <TextView
            style="@style/TextContent.TitleMedium.Bold.MarginLeftRight"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="12dp"
            android:text="@string/food_name"
            android:textSize="20sp"/>

        <TextView
            style="@style/TextContent.BodyMedium.Gray.MarginLeftRight"
            android:layout_marginBottom="18dp"
            android:lineSpacingMultiplier="1"
            android:text="@string/food_description" />

        <TextView
            style="@style/TextContent.TitleMedium.Bold.MarginLeftRight"
            android:layout_marginBottom="6dp"
            android:text="@string/title_ingredient" />

        <TextView
            style="@style/TextContent.BodyMedium.Gray.MarginLeftRight"
            android:layout_marginBottom="18dp"
            android:lineSpacingMultiplier="1"
            android:text="@string/ingredient_content" />

        <TextView
            style="@style/TextContent.TitleMedium.Bold.MarginLeftRight"
            android:layout_marginBottom="6dp"
            android:text="@string/title_cook_method" />

        <TextView
            style="@style/TextContent.BodyMedium.Gray.MarginLeftRight"
            android:layout_marginBottom="18dp"
            android:lineSpacingMultiplier="1"
            android:text="@string/cook_method_content" />

        <TextView
            style="@style/TextContent.TitleMedium.Bold.MarginLeftRight"
            android:layout_marginBottom="6dp"
            android:text="@string/title_nutrition" />

        <TextView
            style="@style/TextContent.BodyMedium.Gray.MarginLeftRight"
            android:layout_marginBottom="18dp"
            android:lineSpacingMultiplier="1"
            android:text="@string/content_title" />

        <Button
            style="@style/ButtonGeneral.SecondaryVariant"
            android:text="@string/add_diary_consumtion"
            android:textStyle="bold"
            android:elevation="4dp"
            android:background="@drawable/rounded_button_greenlight"
            android:textColor="#FFFFFF"
            android:backgroundTint="@null"/>
    </LinearLayout>
</ScrollView>